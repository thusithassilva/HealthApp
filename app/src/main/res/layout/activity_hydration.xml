<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Toolbar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary_color"
            android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
            app:navigationIcon="@drawable/ic_arrow_back_white"
            app:title="Hydration Tracker"
            app:titleTextColor="@color/white" />

        <!-- Today's Date -->
        <TextView
            android:id="@+id/tvTodayDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Monday, December 25"
            android:textColor="@color/dark_text"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp" />

        <!-- Water Progress Section -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Water Level Visualization -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="20dp">

                    <ImageView
                        android:id="@+id/ivWaterLevel"
                        android:layout_width="120dp"
                        android:layout_height="160dp"
                        android:src="@drawable/water_level_0"
                        android:contentDescription="Water level" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingStart="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Today's Intake"
                            android:textColor="@color/gray"
                            android:textSize="14sp"
                            android:layout_marginBottom="8dp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvWaterIntake"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/primary_color"
                                android:textSize="36sp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/tvWaterGoal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="/ 8 glasses"
                                android:textColor="@color/gray"
                                android:textSize="16sp"
                                android:layout_marginStart="4dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

                <!-- Progress Bar -->
                <ProgressBar
                    android:id="@+id/progressWater"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="20dp"
                    android:progress="0"
                    android:progressTint="@color/hydration_progress"
                    android:backgroundTint="@color/light_gray" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Daily Progress"
                        android:textColor="@color/gray"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvProgressPercent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0%"
                        android:textColor="@color/hydration_progress"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Hydration Status -->
                <TextView
                    android:id="@+id/tvHydrationStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Let's start hydrating! ðŸ’§"
                    android:textColor="@color/dark_text"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginTop="12dp" />

                <!-- Congratulations Message -->
                <TextView
                    android:id="@+id/tvCongratulations"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ‰ Congratulations! You've reached your daily water goal!"
                    android:textColor="@color/success_green"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginTop="8dp"
                    android:visibility="gone" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Water Controls -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Add Water Intake"
                    android:textColor="@color/dark_text"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnRemoveGlass"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Remove Glass"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        app:icon="@drawable/ic_remove"
                        app:iconTint="@color/white"
                        app:backgroundTint="@color/error_red"
                        app:cornerRadius="12dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAddHalfGlass"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:text="Â½ Glass"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        app:icon="@drawable/ic_water_half"
                        app:iconTint="@color/white"
                        app:backgroundTint="@color/hydration_light"
                        app:cornerRadius="12dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnAddGlass"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="+1 Glass"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        app:icon="@drawable/ic_water_full"
                        app:iconTint="@color/white"
                        app:backgroundTint="@color/hydration_progress"
                        app:cornerRadius="12dp" />

                </LinearLayout>

                <!-- Reset Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnResetToday"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reset Today's Intake"
                    android:textColor="@color/gray"
                    android:textSize="14sp"
                    android:layout_marginTop="12dp"
                    app:icon="@drawable/ic_refresh"
                    app:iconTint="@color/gray"
                    app:backgroundTint="@color/white"
                    app:strokeColor="@color/gray"
                    app:strokeWidth="1dp"
                    app:cornerRadius="12dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Reminder Settings -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:layout_marginBottom="80dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Water Reminders"
                    android:textColor="@color/dark_text"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Reminder Toggle -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Enable Reminders"
                        android:textColor="@color/dark_text"
                        android:textSize="16sp" />

                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/switchReminder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:thumbTint="@color/primary_color"
                        android:trackTint="@color/switch_track" />

                </LinearLayout>

                <!-- Reminder Status -->
                <TextView
                    android:id="@+id/tvReminderStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reminders disabled"
                    android:textColor="@color/gray"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp" />

                <!-- Interval Selection -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reminder Interval"
                    android:textColor="@color/gray"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn30min"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="4dp"
                        android:text="30 min"
                        android:textSize="12sp"
                        app:cornerRadius="8dp"
                        app:backgroundTint="@color/white"
                        app:strokeColor="@color/input_border"
                        app:strokeWidth="1dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn60min"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:text="60 min"
                        android:textSize="12sp"
                        app:cornerRadius="8dp"
                        app:backgroundTint="@color/white"
                        app:strokeColor="@color/input_border"
                        app:strokeWidth="1dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn90min"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:text="90 min"
                        android:textSize="12sp"
                        app:cornerRadius="8dp"
                        app:backgroundTint="@color/white"
                        app:strokeColor="@color/input_border"
                        app:strokeWidth="1dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn120min"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="4dp"
                        android:text="120 min"
                        android:textSize="12sp"
                        app:cornerRadius="8dp"
                        app:backgroundTint="@color/white"
                        app:strokeColor="@color/input_border"
                        app:strokeWidth="1dp" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Bottom Navigation -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNavigationView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            app:menu="@menu/bottom_navigation_menu"
            app:labelVisibilityMode="labeled"
            app:itemIconTint="@color/bottom_nav_color"
            app:itemTextColor="@color/bottom_nav_color" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>