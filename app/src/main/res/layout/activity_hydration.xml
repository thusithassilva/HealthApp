<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_blue"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        app:navigationIcon="@drawable/ic_arrow_back_white"
        app:title="Hydration Tracker"
        app:titleTextColor="@color/white"
        app:titleTextAppearance="@style/BoldToolbarTitle" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:background="@color/light_background"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Today's Date -->
            <TextView
                android:id="@+id/tvTodayDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monday, December 25, 2024"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp"
                android:gravity="center"
                android:background="@drawable/date_background_professional"
                android:paddingVertical="12dp"
                android:paddingHorizontal="16dp" />

            <!-- Water Progress Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/tvWaterLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="ðŸ’§ Today's Intake (0/8 glasses)"
                            android:textColor="@color/dark_gray"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvProgressPercent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textColor="@color/accent_blue"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Progress Bar -->
                    <ProgressBar
                        android:id="@+id/progressWater"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginBottom="12dp"
                        android:progress="0"
                        android:progressTint="@color/accent_blue"
                        android:progressBackgroundTint="@color/light_gray" />

                    <!-- Hydration Status -->
                    <TextView
                        android:id="@+id/tvHydrationStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Let's start hydrating! ðŸ’§"
                        android:textColor="@color/dark_gray"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:layout_marginBottom="8dp" />

                    <!-- Congratulations Message -->
                    <TextView
                        android:id="@+id/tvCongratulations"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ðŸŽ‰ Congratulations! You've reached your daily water goal!"
                        android:textColor="@color/success_green"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:visibility="gone" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Water Controls -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add Water Intake"
                        android:textColor="@color/dark_gray"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnRemoveGlass"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:text="Remove Glass"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            app:icon="@drawable/ic_remove"
                            app:iconTint="@color/white"
                            app:backgroundTint="@color/error_red"
                            app:cornerRadius="12dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAddHalfGlass"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:text="Â½ Glass"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            app:icon="@drawable/ic_water_half"
                            app:iconTint="@color/white"
                            app:backgroundTint="@color/hydration_light"
                            app:cornerRadius="12dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnAddGlass"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:text="+1 Glass"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            app:icon="@drawable/ic_water_full"
                            app:iconTint="@color/white"
                            app:backgroundTint="@color/accent_blue"
                            app:cornerRadius="12dp" />

                    </LinearLayout>

                    <!-- Reset Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnResetToday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reset Today's Intake"
                        android:textColor="@color/gray"
                        android:textSize="14sp"
                        android:layout_marginTop="12dp"
                        app:icon="@drawable/ic_refresh"
                        app:iconTint="@color/gray"
                        app:backgroundTint="@color/white"
                        app:strokeColor="@color/gray"
                        app:strokeWidth="1dp"
                        app:cornerRadius="12dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Reminder Settings -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="80dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Water Reminders"
                        android:textColor="@color/dark_gray"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Reminder Toggle -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Enable Reminders"
                            android:textColor="@color/dark_gray"
                            android:textSize="16sp" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switchReminder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:thumbTint="@color/accent_blue"
                            android:trackTint="@color/switch_track" />

                    </LinearLayout>

                    <!-- Reminder Status -->
                    <TextView
                        android:id="@+id/tvReminderStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reminders disabled"
                        android:textColor="@color/gray"
                        android:textSize="14sp"
                        android:layout_marginBottom="16dp" />

                    <!-- Interval Selection -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reminder Interval (Seconds)"
                        android:textColor="@color/gray"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn30min"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            android:text="5 sec"
                            android:textSize="12sp"
                            app:cornerRadius="8dp"
                            app:backgroundTint="@color/white"
                            app:strokeColor="@color/input_border"
                            app:strokeWidth="1dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn60min"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:text="10 sec"
                            android:textSize="12sp"
                            app:cornerRadius="8dp"
                            app:backgroundTint="@color/white"
                            app:strokeColor="@color/input_border"
                            app:strokeWidth="1dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn90min"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:text="15 sec"
                            android:textSize="12sp"
                            app:cornerRadius="8dp"
                            app:backgroundTint="@color/white"
                            app:strokeColor="@color/input_border"
                            app:strokeWidth="1dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_navigation_menu"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color"
        android:background="@color/white"
        app:elevation="8dp" />

</LinearLayout>