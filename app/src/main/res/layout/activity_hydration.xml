<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_blue"
        android:theme="@style/ThemeOverlay.MaterialComponents.Dark.ActionBar"
        app:navigationIcon="@drawable/ic_arrow_back_white"
        app:title="Hydration Tracker"
        app:titleTextColor="@color/white"
        app:titleTextAppearance="@style/BoldToolbarTitle" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp"
        android:background="@color/light_background"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Today's Date -->
            <TextView
                android:id="@+id/tvTodayDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monday, December 25, 2024"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:gravity="center"
                android:background="@drawable/date_background_professional"
                android:paddingVertical="12dp"
                android:paddingHorizontal="16dp" />

            <!-- Weekly Chart Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Weekly Hydration"
                        android:textColor="@color/dark_gray"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Weekly Chart Bars -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:orientation="horizontal"
                        android:gravity="bottom"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp">

                        <!-- Monday -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvMonPercent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0%"
                                android:textColor="@color/gray"
                                android:textSize="10sp"
                                android:layout_marginBottom="4dp" />

                            <View
                                android:id="@+id/barMon"
                                android:layout_width="20dp"
                                android:layout_height="10dp"
                                android:background="@color/light_gray"
                                android:layout_marginHorizontal="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Mon"
                                android:textColor="@color/gray"
                                android:textSize="10sp"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- Tuesday -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvTuePercent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0%"
                                android:textColor="@color/gray"
                                android:textSize="10sp"
                                android:layout_marginBottom="4dp" />

                            <View
                                android:id="@+id/barTue"
                                android:layout_width="20dp"
                                android:layout_height="10dp"
                                android:background="@color/light_gray"
                                android:layout_marginHorizontal="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tue"
                                android:textColor="@color/gray"
                                android:textSize="10sp"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- Wednesday -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvWedPercent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0%"
                                android:textColor="@color/gray"
                                android:textSize="10sp"
                                android:layout_marginBottom="4dp" />

                            <View
                                android:id="@+id/barWed"
                                android:layout_width="20dp"
                                android:layout_height="10dp"
                                android:background="@color/light_gray"
                                android:layout_marginHorizontal="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Wed"
                                android:textColor="@color/gray"
                                android:textSize="10sp"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- Thursday -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvThuPercent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0%"
                                android:textColor="@color/gray"
                                android:textSize="10sp"
                                android:layout_marginBottom="4dp" />

                            <View
                                android:id="@+id/barThu"
                                android:layout_width="20dp"
                                android:layout_height="10dp"
                                android:background="@color/light_gray"
                                android:layout_marginHorizontal="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Thu"
                                android:textColor="@color/gray"
                                android:textSize="10sp"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- Friday -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvFriPercent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0%"
                                android:textColor="@color/gray"
                                android:textSize="10sp"
                                android:layout_marginBottom="4dp" />

                            <View
                                android:id="@+id/barFri"
                                android:layout_width="20dp"
                                android:layout_height="10dp"
                                android:background="@color/light_gray"
                                android:layout_marginHorizontal="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Fri"
                                android:textColor="@color/gray"
                                android:textSize="10sp"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- Saturday -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvSatPercent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0%"
                                android:textColor="@color/gray"
                                android:textSize="10sp"
                                android:layout_marginBottom="4dp" />

                            <View
                                android:id="@+id/barSat"
                                android:layout_width="20dp"
                                android:layout_height="10dp"
                                android:background="@color/light_gray"
                                android:layout_marginHorizontal="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sat"
                                android:textColor="@color/gray"
                                android:textSize="10sp"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                        <!-- Sunday -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tvSunPercent"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0%"
                                android:textColor="@color/gray"
                                android:textSize="10sp"
                                android:layout_marginBottom="4dp" />

                            <View
                                android:id="@+id/barSun"
                                android:layout_width="20dp"
                                android:layout_height="10dp"
                                android:background="@color/light_gray"
                                android:layout_marginHorizontal="4dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sun"
                                android:textColor="@color/gray"
                                android:textSize="10sp"
                                android:layout_marginTop="4dp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Water Progress Section -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:id="@+id/tvWaterLabel"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="💧 Today's Intake (0/8 glasses)"
                            android:textColor="@color/dark_gray"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvProgressPercent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0%"
                            android:textColor="@color/accent_blue"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <!-- Progress Bar -->
                    <ProgressBar
                        android:id="@+id/progressWater"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:layout_height="8dp"
                        android:layout_marginBottom="12dp"
                        android:progress="0"
                        android:progressTint="@color/accent_blue"
                        android:progressBackgroundTint="@color/light_gray" />

                    <!-- Hydration Status -->
                    <TextView
                        android:id="@+id/tvHydrationStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Let's start hydrating! 💧"
                        android:textColor="@color/dark_gray"
                        android:textSize="14sp"
                        android:gravity="center"
                        android:layout_marginBottom="8dp" />

                    <!-- Congratulations Message -->
                    <TextView
                        android:id="@+id/tvCongratulations"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="🎉 Congratulations! You've reached your daily water goal!"
                        android:textColor="@color/success_green"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:visibility="gone" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Water Controls -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Quick Actions"
                        android:textColor="@color/dark_gray"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Professional Water Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_marginBottom="8dp">

                        <!-- Remove Glass Button -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/btnRemoveGlass"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_weight="1"
                            android:layout_marginEnd="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="@color/white">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:background="@drawable/button_remove_background">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_remove"
                                    android:contentDescription="Remove"
                                    android:tint="@color/error_red" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Remove"
                                    android:textColor="@color/error_red"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="8dp" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <!-- Half Glass Button -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/btnAddHalfGlass"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="@color/white">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:background="@drawable/button_half_background">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_water_half"
                                    android:contentDescription="Half Glass"
                                    android:tint="@color/hydration_light" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="½ Glass"
                                    android:textColor="@color/hydration_light"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="8dp" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <!-- Add Glass Button -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/btnAddGlass"
                            android:layout_width="0dp"
                            android:layout_height="80dp"
                            android:layout_weight="1"
                            android:layout_marginStart="8dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:foreground="?android:attr/selectableItemBackground"
                            app:cardCornerRadius="12dp"
                            app:cardElevation="2dp"
                            app:cardBackgroundColor="@color/white">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:background="@drawable/button_add_background">

                                <ImageView
                                    android:layout_width="24dp"
                                    android:layout_height="24dp"
                                    android:src="@drawable/ic_water_full"
                                    android:contentDescription="Add Glass"
                                    android:tint="@color/hydration_progress" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="+1 Glass"
                                    android:textColor="@color/hydration_progress"
                                    android:textSize="12sp"
                                    android:textStyle="bold"
                                    android:layout_marginTop="8dp" />

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <!-- Reset Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnResetToday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reset Today's Intake"
                        android:textColor="@color/gray"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        app:icon="@drawable/ic_refresh"
                        app:iconTint="@color/gray"
                        app:backgroundTint="@color/white"
                        app:strokeColor="@color/gray"
                        app:strokeWidth="1dp"
                        app:cornerRadius="12dp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <!-- Reminder Settings -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="80dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Water Reminders"
                        android:textColor="@color/dark_gray"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="16dp" />

                    <!-- Reminder Toggle -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Enable Reminders"
                            android:textColor="@color/dark_gray"
                            android:textSize="16sp" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/switchReminder"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:thumbTint="@color/accent_blue"
                            android:trackTint="@color/switch_track" />

                    </LinearLayout>

                    <!-- Reminder Status -->
                    <TextView
                        android:id="@+id/tvReminderStatus"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reminders disabled"
                        android:textColor="@color/gray"
                        android:textSize="14sp"
                        android:layout_marginBottom="16dp" />

                    <!-- Interval Selection -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reminder Interval (Seconds)"
                        android:textColor="@color/gray"
                        android:textSize="14sp"
                        android:layout_marginBottom="8dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn30min"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="4dp"
                            android:text="5 sec"
                            android:textSize="12sp"
                            app:cornerRadius="8dp"
                            app:backgroundTint="@color/white"
                            app:strokeColor="@color/input_border"
                            app:strokeWidth="1dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn60min"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:layout_marginEnd="4dp"
                            android:text="10 sec"
                            android:textSize="12sp"
                            app:cornerRadius="8dp"
                            app:backgroundTint="@color/white"
                            app:strokeColor="@color/input_border"
                            app:strokeWidth="1dp" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn90min"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginStart="4dp"
                            android:text="15 sec"
                            android:textSize="12sp"
                            app:cornerRadius="8dp"
                            app:backgroundTint="@color/white"
                            app:strokeColor="@color/input_border"
                            app:strokeWidth="1dp" />

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Navigation -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:menu="@menu/bottom_navigation_menu"
        app:labelVisibilityMode="labeled"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color"
        android:background="@color/white"
        app:elevation="8dp" />

</LinearLayout>